# DigitalBlock Exchange Frontend Environment Configuration
# Copy this file to .env and configure with your values

# Application Environment
REACT_APP_ENV=production
REACT_APP_VERSION=2.1.0

# API Configuration
REACT_APP_API_BASE_URL=https://your-backend-api.onrender.com
REACT_APP_WS_URL=wss://your-backend-api.onrender.com
REACT_APP_DOMAIN=https://your-frontend.onrender.com

# Network Environment (mainnet/testnet)
REACT_APP_NETWORK_ENVIRONMENT=mainnet

# Bitcoin Configuration
REACT_APP_BTC_RPC_URL=https://blockstream.info/api
REACT_APP_BTC_TESTNET_RPC_URL=https://blockstream.info/testnet/api
REACT_APP_BTC_EXPLORER_MAINNET=https://blockstream.info
REACT_APP_BTC_EXPLORER_TESTNET=https://blockstream.info/testnet

# Ethereum Configuration
REACT_APP_ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
REACT_APP_ETH_TESTNET_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
REACT_APP_ETH_EXPLORER_MAINNET=https://etherscan.io
REACT_APP_ETH_EXPLORER_TESTNET=https://sepolia.etherscan.io

# BNB Smart Chain Configuration
REACT_APP_BNB_RPC_URL=https://bsc-dataseed1.binance.org
REACT_APP_BNB_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
REACT_APP_BNB_EXPLORER_MAINNET=https://bscscan.com
REACT_APP_BNB_EXPLORER_TESTNET=https://testnet.bscscan.com

# Avalanche Configuration
REACT_APP_AVAX_RPC_URL=https://api.avax.network/ext/bc/C/rpc
REACT_APP_AVAX_TESTNET_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
REACT_APP_AVAX_EXPLORER_MAINNET=https://snowtrace.io
REACT_APP_AVAX_EXPLORER_TESTNET=https://testnet.snowtrace.io

# Polygon Configuration
REACT_APP_MATIC_RPC_URL=https://polygon-rpc.com
REACT_APP_MATIC_TESTNET_RPC_URL=https://rpc-mumbai.maticvigil.com
REACT_APP_MATIC_EXPLORER_MAINNET=https://polygonscan.com
REACT_APP_MATIC_EXPLORER_TESTNET=https://mumbai.polygonscan.com

# Solana Configuration
REACT_APP_SOL_RPC_URL=https://api.mainnet-beta.solana.com
REACT_APP_SOL_TESTNET_RPC_URL=https://api.testnet.solana.com
REACT_APP_SOL_DEVNET_RPC_URL=https://api.devnet.solana.com
REACT_APP_SOL_EXPLORER_MAINNET=https://explorer.solana.com
REACT_APP_SOL_EXPLORER_TESTNET=https://explorer.solana.com?cluster=testnet

# XDC Network Configuration
REACT_APP_XDC_RPC_URL=https://rpc.xinfin.network
REACT_APP_XDC_TESTNET_RPC_URL=https://rpc.apothem.network
REACT_APP_XDC_EXPLORER_MAINNET=https://explorer.xinfin.network
REACT_APP_XDC_EXPLORER_TESTNET=https://explorer.apothem.network

# XRP Ledger Configuration
REACT_APP_XRP_RPC_URL=wss://xrplcluster.com
REACT_APP_XRP_TESTNET_RPC_URL=wss://s.altnet.rippletest.net:51233
REACT_APP_XRP_EXPLORER_MAINNET=https://livenet.xrpl.org
REACT_APP_XRP_EXPLORER_TESTNET=https://testnet.xrpl.org

# Stellar Configuration
REACT_APP_XLM_RPC_URL=https://horizon.stellar.org
REACT_APP_XLM_TESTNET_RPC_URL=https://horizon-testnet.stellar.org
REACT_APP_XLM_EXPLORER_MAINNET=https://stellar.expert/explorer/public
REACT_APP_XLM_EXPLORER_TESTNET=https://stellar.expert/explorer/testnet

# Wallet Configuration
REACT_APP_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id
REACT_APP_INFURA_PROJECT_ID=your-infura-project-id
REACT_APP_ALCHEMY_API_KEY=your-alchemy-api-key

# Multi-Chain Feature Flags
REACT_APP_ENABLE_BITCOIN=true
REACT_APP_ENABLE_ETHEREUM=true
REACT_APP_ENABLE_BNB=true
REACT_APP_ENABLE_AVALANCHE=true
REACT_APP_ENABLE_POLYGON=true
REACT_APP_ENABLE_SOLANA=true
REACT_APP_ENABLE_XDC=true
REACT_APP_ENABLE_XRP=true
REACT_APP_ENABLE_STELLAR=true

# Platform Feature Flags
REACT_APP_ENABLE_NFT_MARKETPLACE=true
REACT_APP_ENABLE_STAKING=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_TRADING=true
REACT_APP_ENABLE_SWAP=true
REACT_APP_ENABLE_CROSS_CHAIN=true

# Network Preferences
REACT_APP_DEFAULT_NETWORK=XRP
REACT_APP_SHOW_TESTNETS=false
REACT_APP_AUTO_CONNECT_WALLETS=true
REACT_APP_ENABLE_NETWORK_SWITCHING=true

# Gas and Fee Configuration
REACT_APP_ETH_DEFAULT_GAS_LIMIT=21000
REACT_APP_BNB_DEFAULT_GAS_LIMIT=21000
REACT_APP_AVAX_DEFAULT_GAS_LIMIT=21000
REACT_APP_MATIC_DEFAULT_GAS_LIMIT=21000
REACT_APP_XDC_DEFAULT_GAS_LIMIT=21000

# Analytics & Monitoring
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_SENTRY_DSN=your-frontend-sentry-dsn
REACT_APP_HOTJAR_ID=your-hotjar-id

# Social Media Links
REACT_APP_TWITTER_URL=https://twitter.com/digitalblockex
REACT_APP_TELEGRAM_URL=https://t.me/digitalblockexchange
REACT_APP_DISCORD_URL=https://discord.gg/digitalblockex

# Security Configuration
REACT_APP_CSP_NONCE=your-csp-nonce
REACT_APP_ENABLE_HTTPS_ONLY=true

# Performance Configuration
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_ENABLE_PWA=true
REACT_APP_CACHE_TIMEOUT=300000

